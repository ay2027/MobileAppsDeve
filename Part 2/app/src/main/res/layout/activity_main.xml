<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from these to play music"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_marginBottom="24dp" />

    <!-- 2x2 Grid of ImageButtons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/rainButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_rain"
                android:contentDescription="Play rain sound"/>

            <ImageButton
                android:id="@+id/forestButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_forest"
                android:contentDescription="Play forest sound"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/oceanButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_ocean"
                android:contentDescription="Play ocean sound"/>

            <ImageButton
                android:id="@+id/cafeButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_cafe"
                android:contentDescription="Play cafe sound"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 2x2 Grid of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/stopAllBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/openInstructionsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:layout_margin="8dp"
                android:onClick="openInstructions" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/openSettingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_margin="8dp"
                android:onClick="openSettings" />

            <Button
                android:id="@+id/openJournalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:layout_margin="8dp"
                android:onClick="openJournal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
